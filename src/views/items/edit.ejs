<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>

    <% include ../static/partials/navbar.ejs %>
    <% include ../static/partials/messages.ejs %>

    <main class="container">

        <h1>Edit Item</h1>

        <h3><%= item.title %></h1>
            <form action="/items/<%= item.id %>/update" method="post">
                <div class="form-group">
                    <label for="title">Item Title</label>
                    <input value="<%= item.title %>" type="text" class="form-control" name="title"
                        aria-describedby="titleHelp" placeholder="Enter Title">
                </div>
                <div class="form-group">
                    <label for="purchased">Purchased:</label>
                    <select class="form-control" name="purchased">
                        <option value="false">Has Not Been Purchased</option>
                        <option value="true">Purchased</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>