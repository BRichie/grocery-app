<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body class="signUpBG">

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

        <% include ../static/partials/messages.ejs %>

        <h1>Sign up</h1>

        <form action="/users" method="post">

            <div class="form-group">
                <div class="col-md-6">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp"
                        placeholder="Enter email">
                </div>
                <div class="form-group">
                    <div class="col-md-6">

                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" aria-describedby="passwordHelp"
                            placeholder="Enter password">
                            <small class="text-muted" id="emailHelp">Must be a valid Email</small>

                   
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        <label for="passwordConfirmation">Password confirmation</label>
                        <input type="password" class="form-control" name="passwordConfirmation"
                            aria-describedby="passwordHelp" placeholder="Enter password confirmation">
                    </div>
               
               
                <div class="col-md-6">

                    <button type="submit" class="btn btn-primary">Sign up</button>
                </div>
                </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>